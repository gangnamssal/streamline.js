{
  "compilerOptions": {
    "baseUrl": "/",
    "module": "CommonJS",
    "target": "ESNext",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "declaration": true,
    "strict": true,
    "types": ["jest"],

    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "noEmitOnError": true
  },
  "include": ["src/curry/index.ts", "src/lazy/index.ts", "src/strict/index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
